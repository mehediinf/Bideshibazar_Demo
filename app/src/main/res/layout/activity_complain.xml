<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

    <!-- App Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:layout_marginTop="20dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_left"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/appBarTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Complaint"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit a Complaint"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="12dp" />

        <EditText
            android:id="@+id/orderIdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Order ID"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have you received your order successfully?" />

        <RadioGroup
            android:id="@+id/orderReceivedGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <RadioButton
                android:id="@+id/receivedYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"

                />
            <RadioButton
                android:id="@+id/receivedNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"

                />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Was the delivery on time as expected?" />

        <RadioGroup
            android:id="@+id/deliveryOnTimeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <RadioButton
                android:id="@+id/ontimeYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"/>
            <RadioButton
                android:id="@+id/ontimeNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"

                />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did you face any issues with the delivery process?" />

        <RadioGroup
            android:id="@+id/issuesGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <RadioButton
                android:id="@+id/issuesYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"

                />
            <RadioButton
                android:id="@+id/issuesNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"

                />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did you receive the correct items as per your order?" />

        <RadioGroup
            android:id="@+id/correctItemsGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <RadioButton
                android:id="@+id/correctYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"

                />
            <RadioButton
                android:id="@+id/correctNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"

                />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Was the package in good condition upon arrival?" />

        <RadioGroup
            android:id="@+id/goodConditionGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <RadioButton android:id="@+id/conditionYes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yes"/>
            <RadioButton android:id="@+id/conditionNo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Would you like to provide any feedback to improve our delivery service?" />

        <RadioGroup
            android:id="@+id/feedbackGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <RadioButton android:id="@+id/feedbackYes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yes"/>
            <RadioButton android:id="@+id/feedbackNo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Complaint Details"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/additionalDetails"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Describe your complaint"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:overScrollMode="always"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:isScrollContainer="true" />


        <Button
            android:id="@+id/submitComplaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Complaint"
            android:backgroundTint="#3F7BF6"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="40dp"
            />


    </LinearLayout>

    </LinearLayout>




</ScrollView>






