<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".features.ReturnPolicyActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


    <!-- App Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:layout_marginTop="20dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_left"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Return Policy"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 Important Terms &amp; Conditions"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="#212121" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please read these terms carefully before placing your order"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:textColor="#757575" />

        <!-- Card 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F9F9F9"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ Fresh Product Guarantee"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We always try to deliver fresh and high-quality products. If any item is missing or damaged upon delivery, we will refund the value or add equivalent points to your next order."
                android:textSize="14sp"
                android:textColor="#616161"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Card 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F9F9F9"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❌ Taste &amp; Personal Preference"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We are not responsible for the taste or personal satisfaction with a product. Taste may vary from person to person."
                android:textSize="14sp"
                android:textColor="#616161"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Card 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F9F9F9"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📋 Customer-Caused Damage"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If a product is damaged due to improper handling or storage by the customer, we will not be held responsible."
                android:textSize="14sp"
                android:textColor="#616161"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Card 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F9F9F9"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔹 Incorrect Address"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If the address provided is incorrect or incomplete, and this causes delay or failed delivery, we cannot be held accountable."
                android:textSize="14sp"
                android:textColor="#616161"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Card 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F9F9F9"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🕶️ Return Policy"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Once a delivery is completed, we do not accept returns unless the product was delivered damaged or incorrect."
                android:textSize="14sp"
                android:textColor="#616161"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Card 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F9F9F9"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏱ Delivery Timing"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We do our best to deliver on time, but delays may occur due to weather, traffic, or high order volume. We appreciate your understanding."
                android:textSize="14sp"
                android:textColor="#616161"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Card 7 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F9F9F9"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📄 Proof of Issue Required"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If there's any issue with your order, please contact us with photos or videos within 2 hours of delivery. We may not be able to process complaints submitted later."
                android:textSize="14sp"
                android:textColor="#616161"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Note: By proceeding with your order, you acknowledge and agree to these terms and conditions."
            android:textSize="13sp"
            android:textColor="#616161"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="60dp"
            android:padding="8dp" />






    </LinearLayout>
    </LinearLayout>
</ScrollView>
