<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".account.SupportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <!-- App Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:paddingStart="16dp"
            android:layout_marginTop="20dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Help Center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </RelativeLayout>


    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Us A Message"
            android:textAlignment="center"
            android:textColor="#212121"
            android:textSize="26sp"
            android:textStyle="bold"
            android:paddingBottom="24dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:background="@drawable/bg_edittext"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_edittext"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Your Message"
            android:background="@drawable/bg_edittext"
            android:padding="16dp"
            android:gravity="top"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Message"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0288D1"
            android:layout_gravity="center"
            android:elevation="4dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Section Title -->
        <TextView
            android:id="@+id/getInTouchTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📬 Get in Touch"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#0288D1"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="12dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For any inquiries, feel free to reach out via email, phone, or visit our office. We're happy to help you!"
            android:textColor="#616161"
            android:textSize="14sp"
            android:layout_marginBottom="20dp" />

        <!-- Office Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📍"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Our Office: Wien 1120, Austria"
                android:textColor="#37474F"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📞"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phone: +43 688 6417 9877"
                android:textColor="#37474F"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📧"
                android:textSize="18sp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Email: info@bideshibazar.com"
                android:textColor="#37474F"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</ScrollView>
