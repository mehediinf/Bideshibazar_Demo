<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- App Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:paddingStart="16dp"
            android:layout_marginTop="20dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tax information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >
        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🇦🇹 Cost of Living in Austria – 2025"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Overview -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Government data from 2019/20 showed an average household expenditure of €3,250 per month. By 2025, Statista forecasts per capita spending to reach approximately €2,402 monthly."
            android:textColor="#424242"
            android:layout_marginBottom="16dp" />

        <!-- Grocery Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🛒 Grocery Prices (2025)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0288D1"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Apples (1kg): €2.00–€3.50\n• Water (1L): €0.45–2.20\n• Bread (1 loaf): €1.20–5.00\n• Milk (1L): €1–1.90\n• Cheese (1kg): €8.00–30.00\n• Rice (1kg): €1.20–7.00\n• Coffee (500g): €4.00–15.00\n• Tea (20 bags): €1.60–4.50\n• Eggs (6): €2.10–4.20\n• Tomatoes (1kg): €2.80–5.00\n• Orange juice (1L): €2.30–4.00"
            android:textColor="#424242"
            android:layout_marginBottom="16dp" />

        <!-- Alcohol Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍷 Alcohol (2025)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0288D1"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Restaurant beer/wine: €3–8\n• Supermarket beer pack: €4–8\n• Bottle of wine: €8–12\n• Cocktail (restaurant): €10–15\n• Vodka (0.7L): €6 (store brand)\n• Single malt whisky: Up to €70"
            android:textColor="#424242"
            android:layout_marginBottom="16dp" />

        <!-- Hygiene Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧼 Hygiene &amp; Household Products"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0288D1"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• All-purpose cleaner (1L): €2.10–10.80\n• Shampoo (1L): €1.50–10.00\n• Deodorant (150ml): €1.30–7.30\n• Soap (100ml): €0.20–2.00\n• Dish soap (1L): €1.50–5.30\n• Tampons: €0.02–0.16 each\n• Garbage bags (roll): €1.00–6.80\n• Toilet paper (roll): €0.30–1.00\n• Laundry detergent (per wash): €0.10–0.50\n• Toothpaste (75ml): €1.40–10.00"
            android:textColor="#424242"
            android:layout_marginBottom="16dp" />

        <!-- Clothing -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👗 Clothing &amp; Footwear"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0288D1"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statista forecasts monthly per capita spending on clothes and footwear to reach around €107.\n• Jeans: €50–120\n• Running shoes: ~€90\n• Designer items: Several hundred euros"
            android:textColor="#424242"
            android:layout_marginBottom="16dp" />

        <!-- Transportation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🚍 Transportation Costs"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0288D1"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Vienna – Single ticket: €2.40\n• Graz – One-hour ticket: €3.10\n• Linz – One-hour ticket: €3.00\n• Salzburg – One-hour ticket: €2.50\n• Innsbruck – Single ticket: €1.90"
            android:textColor="#424242"
            android:layout_marginBottom="60dp" />

    </LinearLayout>

    </LinearLayout>
</ScrollView>
