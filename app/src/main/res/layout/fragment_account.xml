<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".shop.ShopFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"

                >

                <!-- Sign In Button -->
                <Button
                    android:id="@+id/btnSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Sign in"
                    style="@style/RoundedButton"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_gravity="center|right"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/headsetId"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="Headset"
                    android:src="@drawable/ic_headset"
                    tools:ignore="RtlHardcoded" />

                <ImageView
                    android:id="@+id/settingsId"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:contentDescription="Settings"
                    android:src="@drawable/ic_settings"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:drawableBottom="@drawable/underline_divider"
            android:layout_marginTop="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:letterSpacing="0.05"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            >

            <LinearLayout
                android:id="@+id/featuresLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="Features"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                tools:ignore="UseCompatTextViewDrawableXml" />

                <LinearLayout
                    android:id="@+id/featuresId"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:layout_gravity="center|right"
                    android:gravity="right"
                    >

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center|right"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="Headset"
                        android:src="@drawable/ic_arrow_right"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/profileId"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/historyId"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/history" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Browsing history"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Payment -->
                    <LinearLayout
                        android:id="@+id/paymentId"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/tax_informationId"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tax information"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/paymentId"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/paymentId"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/paymentId"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/paymentId"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/complainId"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Complain"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>



                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/myOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:drawableBottom="@drawable/underline_divider"
            android:layout_marginTop="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:letterSpacing="0.05"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="My order"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_gravity="center|right"
                android:gravity="right"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="Headset"
                    android:src="@drawable/ic_arrow_right"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/webLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:drawableBottom="@drawable/underline_divider"
            android:layout_marginTop="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:letterSpacing="0.05"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            >


            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="Visit our website on Bideshibazar"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                tools:ignore="UseCompatTextViewDrawableXml" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="center|right"
                android:gravity="left"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="Headset"
                    android:src="@drawable/ic_link"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:drawableBottom="@drawable/underline_divider"
            android:layout_marginTop="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:letterSpacing="0.05"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="7dp"
                    android:text="Recommandation"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    tools:ignore="UseCompatTextViewDrawableXml" />

            <HorizontalScrollView
                android:id="@+id/recommandationId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:scrollbars="none"
                android:visibility="visible"
                >

                <LinearLayout
                    android:id="@+id/grocerySubCategoryLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/grocery_All"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"
                        android:padding="8dp"
                        android:text="All" />


                    <TextView
                        android:id="@+id/grocery_ReadyToEat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready to Eat"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"
                        />

                    <TextView
                        android:id="@+id/grocery_FruitVegetables"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fruit and Vegetables"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_Drinks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drinks"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"


                        />

                    <TextView
                        android:id="@+id/grocery_RiceNoodles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rice &amp; Noodles"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_FloursCereals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flours &amp; Cereals"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_NutsPulses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beans, Nuts &amp; Pulses"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_CoconutMilk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coconut &amp; Milk"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_OilsButter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oils &amp; Butter"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_SweetsSnacks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sweets &amp; Snacks"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_HerbsSpices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Herbs &amp; Spices"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_MeatSoya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fish , Meat &amp; Soya"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_Sauces"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sauces"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_CookingPastesKits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cooking Pastes &amp; Kits"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_Dal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dal"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_PersonalCare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal Care"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_ElectronicAccessories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electronic Accessories"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />


                    <TextView
                        android:id="@+id/grocery_BeautyProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beauty Products"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                </LinearLayout>


            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="visible"
                tools:listitem="@layout/item_product" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>