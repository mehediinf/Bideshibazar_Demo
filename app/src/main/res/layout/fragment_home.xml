<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- App Bar with collapsing top and sticky horizontal menu -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:background="#FFFFFF"
        app:elevation="4dp">

        <!-- Collapsing Top Layout (logo, notification) -->
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <!-- Top Bar (logo + notification) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp"
                app:layout_collapseMode="parallax">

                <!-- Logo (left) -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:src="@drawable/font_page"
                    android:contentDescription="Logo"
                    android:layout_weight="1"
                    android:scaleType="fitStart"
                    android:layout_gravity="start|center_vertical"
                    tools:ignore="RtlHardcoded" />

                <!-- Empty Space (acts like spacer) -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Notification Icon (right) -->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/notification_big"
                    android:contentDescription="Notification"
                    android:layout_gravity="end|center_vertical"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>


        <!-- Search bar -->

        <!-- Fixed Horizontal Scroll Menu -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:hint="Search Bideshibazar"
            android:background="@drawable/search_bar_background"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textColorHint="#888888"
            android:elevation="4dp"
            android:inputType="text"
            app:layout_scrollFlags="enterAlways" />



        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="6dp"
            android:scrollbars="none"
            app:layout_scrollFlags="enterAlways">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/button_background_selector"
                    android:text="Groceries"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:drawableTop="@drawable/basket"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="6dp"
                    android:gravity="center"
                    android:elevation="2dp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/button_background_selector"
                    android:text="Fashion"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:drawableTop="@drawable/fashion"
                    android:layout_marginEnd="8dp"
                    android:padding="6dp"
                    android:gravity="center"
                    android:elevation="2dp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/button_background_selector"
                    android:text="Air Ticket"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:drawableTop="@drawable/plane"
                    android:layout_marginEnd="8dp"
                    android:padding="6dp"
                    android:gravity="center"
                    android:elevation="2dp" />

            </LinearLayout>
        </HorizontalScrollView>


    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content Area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:background="@color/white"
        android:paddingBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- Scrollable Dummy Products -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="5dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#C4C7C1"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offers"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready to Eat"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fruit and Vegetables"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drinks"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rice &amp; Noodles"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flours &amp; Cereals"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beans, Nuts &amp; Pulses"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coconut &amp; Milk"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oils &amp; Butter"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sweets &amp; Snacks"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Herbs &amp; Spices"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fish , Meat &amp; Soya"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sauces"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cooking Pastes &amp; Kits"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dal"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal Care"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electronic Accessories"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beauty Products"
                        android:padding="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                </LinearLayout>
            </HorizontalScrollView>




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/a_logo" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/a_logo" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hudai"

                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
