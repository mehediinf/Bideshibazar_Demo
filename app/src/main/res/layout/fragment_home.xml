<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- App Bar with collapsing top and sticky horizontal menu -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:elevation="4dp">



        <!-- Collapsing Top Layout (logo, notification) -->
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <!-- Top Bar (logo + notification) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_collapseMode="parallax">

                <!-- Logo (left) -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:contentDescription="Logo"
                    android:scaleType="fitStart"
                    android:src="@drawable/font_page"
                    tools:ignore="RtlHardcoded" />

                <!-- Empty Space (acts like spacer) -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Notification Icon (right) -->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center_vertical"
                    android:contentDescription="Notification"
                    android:src="@drawable/notification_big"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>


        <!-- Search bar -->

        <!-- Fixed Horizontal Scroll Menu -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/search_bar_background"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="10dp"
            android:elevation="4dp"
            android:layout_marginTop="20dp"
            android:hint="Search Bideshibazar"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#888888"
            android:textSize="14sp"
            app:layout_scrollFlags="enterAlways" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="6dp"
            android:scrollbars="none"
            app:layout_scrollFlags="enterAlways">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/groceriesBtn"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/category_button_background_selector"
                    android:drawableTop="@drawable/basket"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Groceries"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/fashionBtn"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/category_button_background_selector"
                    android:drawableTop="@drawable/fashion"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Fashion"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/ticketBtn"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/category_button_background_selector"
                    android:drawableTop="@drawable/plane"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Air Ticket"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="13sp" />

            </LinearLayout>
        </HorizontalScrollView>


    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content Area -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- Scrollable Dummy Products -->
            <HorizontalScrollView
                android:id="@+id/subCategoryRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:scrollbars="none"
                android:visibility="visible"
                >

                <LinearLayout
                    android:id="@+id/grocerySubCategoryLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/grocery_All"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"
                        android:padding="8dp"
                        android:text="All" />

                    <TextView
                        android:id="@+id/grocery_Offers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offers"
                        android:padding="8dp"
                        android:backgroundTint="#EF2D6D"
                        android:textColor="@color/white"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_ReadyToEat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready to Eat"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"
                        />

                    <TextView
                        android:id="@+id/grocery_FruitVegetables"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fruit and Vegetables"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_Drinks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drinks"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"


                        />

                    <TextView
                        android:id="@+id/grocery_RiceNoodles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rice &amp; Noodles"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_FloursCereals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flours &amp; Cereals"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_NutsPulses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beans, Nuts &amp; Pulses"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_CoconutMilk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coconut &amp; Milk"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_OilsButter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oils &amp; Butter"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_SweetsSnacks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sweets &amp; Snacks"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_HerbsSpices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Herbs &amp; Spices"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_MeatSoya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fish , Meat &amp; Soya"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_Sauces"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sauces"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_CookingPastesKits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cooking Pastes &amp; Kits"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_Dal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dal"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_PersonalCare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal Care"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/grocery_ElectronicAccessories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electronic Accessories"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />


                    <TextView
                        android:id="@+id/grocery_BeautyProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beauty Products"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                </LinearLayout>


            </HorizontalScrollView>
            <HorizontalScrollView
                android:id="@+id/scrollFashion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:visibility="gone"
                >

                <LinearLayout
                    android:id="@+id/fashionSubCategoryLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fashion_All"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"
                        android:padding="8dp"
                        android:text="All" />

                    <TextView
                        android:id="@+id/fashion_Offers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offers"
                        android:padding="8dp"
                        android:backgroundTint="#EF2D6D"
                        android:textColor="@color/white"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/fashion_Saree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saree"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/fashion_Dresses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dresses"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/fashion_JeweleryOrnaments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jewelery &amp; Ornaments"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />



                </LinearLayout>


            </HorizontalScrollView>
            <HorizontalScrollView
                android:id="@+id/scrollTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:scrollbars="none"
                android:visibility="gone"
                >

                <LinearLayout
                    android:id="@+id/ticketSubCategoryLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/airTicket_Offers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offers"
                        android:padding="8dp"
                        android:backgroundTint="#EF2D6D"
                        android:textColor="@color/white"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"

                        />

                    <TextView
                        android:id="@+id/airTicket_ComingSoon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/sub_category_button_background_selector"
                        android:padding="8dp"
                        android:text="C o m i n g   S o o n !" />



                </LinearLayout>


            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:visibility="visible"
                tools:listitem="@layout/item_product" />

            <!-- Next Page Arrow -->
            <LinearLayout
                android:id="@+id/nextPageArrow"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/bg_see_more"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:elevation="2dp"
                android:layout_marginBottom="12dp"
                >

                <TextView
                    android:id="@+id/seeMoreText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="See more..."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="start|center_vertical"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_arrow_forward_ios_24"
                    android:contentDescription="Arrow"
                    app:tint="@color/black" />
            </LinearLayout>


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/trendingViewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="16dp" />

            <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                android:id="@+id/dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                tools:ignore="MissingClass" />


            <TextView
                android:id="@+id/popularProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="POPULAR PRODUCTS"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:letterSpacing="0.05"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:shadowColor="#55000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1.5"
                android:drawableBottom="@drawable/underline_divider"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popularProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:visibility="visible"
                tools:listitem="@layout/item_product" />



            <WebView
                android:id="@+id/youtubeWebView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                style="@style/CustomWebViewStyle"
                android:background="@drawable/webview_background"
                tools:ignore="WebViewLayout" />



            <include layout="@layout/info_cards" />

            <include layout="@layout/footer_layout" />




        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>
