<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".shop.ShopFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"

                >


                <!-- Fixed Horizontal Scroll Menu -->
                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/search_bar_background"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawablePadding="10dp"
                    android:elevation="4dp"
                    android:layout_marginTop="15dp"
                    android:hint="Search Bideshibazar"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#888888"
                    android:textSize="14sp"
                    app:layout_scrollFlags="enterAlways" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_gravity="center|right"
                android:gravity="center"
                >


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="Notification"
                    android:src="@drawable/notification_big"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/popularProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POPULAR SHOP"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:letterSpacing="0.05"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:drawableBottom="@drawable/underline_divider"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <HorizontalScrollView
            android:id="@+id/subCategoryRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:scrollbars="none"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            >

            <LinearLayout
                android:id="@+id/grocerySubCategoryLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/forYouId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For you"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:background="@drawable/sub_category_button_background_selector"
                    />
                <TextView
                    android:id="@+id/bideshiBazarId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bideshi Bazar"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:background="@drawable/sub_category_button_background_selector"
                    />


                <TextView
                    android:id="@+id/asianOrientalHouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asian Oriental House"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:background="@drawable/sub_category_button_background_selector"
                    />

                <TextView
                    android:id="@+id/mollahMarkt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mollah Markt"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:background="@drawable/sub_category_button_background_selector"

                    />

                <TextView
                    android:id="@+id/polliBanglaSuperMarkt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Polli Bangla Super Markt"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:background="@drawable/sub_category_button_background_selector"


                    />
                <TextView
                    android:id="@+id/goldenBanglaSuperMarket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Golden Bangla Super Market"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:background="@drawable/sub_category_button_background_selector"


                    />



            </LinearLayout>


        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="visible"
            tools:listitem="@layout/item_product" />


    </LinearLayout>




</FrameLayout>