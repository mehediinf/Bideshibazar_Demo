<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="2dp"
    android:radius="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pr1"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Product Title (Bigger, auto-sized) -->
        <TextView
            android:id="@+id/productName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Product Title Example"
            android:textColor="#212121"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/title_min"
            android:autoSizeMaxTextSize="@dimen/title_max"
            android:autoSizeStepGranularity="1sp"
            app:layout_constraintTop_toBottomOf="@id/productImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Added to Cart -->
        <TextView
            android:id="@+id/addedToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 added to cart"
            android:textColor="#757575"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_min"
            android:autoSizeMaxTextSize="@dimen/text_max"
            android:autoSizeStepGranularity="1sp"
            app:layout_constraintTop_toBottomOf="@id/productName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="2dp" />

        <!-- Sold and Rating -->
        <TextView
            android:id="@+id/soldAndRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 sold ⭐ 4.7"
            android:textColor="#757575"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_min"
            android:autoSizeMaxTextSize="@dimen/text_max"
            android:autoSizeStepGranularity="1sp"
            app:layout_constraintTop_toBottomOf="@id/addedToCart"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="2dp" />

        <!-- Price Row -->
        <LinearLayout
            android:id="@+id/priceRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/soldAndRating"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/currentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€ 4.95"
                android:textColor="#000000"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_min"
                android:autoSizeMaxTextSize="@dimen/text_max"
                android:autoSizeStepGranularity="1sp" />

            <TextView
                android:id="@+id/oldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€ 8.68"
                android:textColor="#999999"
                android:layout_marginStart="8dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_min"
                android:autoSizeMaxTextSize="@dimen/text_max"
                android:autoSizeStepGranularity="1sp" />
        </LinearLayout>

        <!-- Discount Badge -->
        <TextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30% OFF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/rounded_discount_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_min"
            android:autoSizeMaxTextSize="@dimen/text_max"
            android:autoSizeStepGranularity="1sp"
            app:layout_constraintTop_toBottomOf="@id/priceRow"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
