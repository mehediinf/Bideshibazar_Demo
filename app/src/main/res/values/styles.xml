<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedButton">
        <item name="android:backgroundTint">#FFCC00</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:stateListAnimator">@null</item> <!-- removes ripple if needed -->
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>


    <style name="RoundedButton2">
        <item name="android:backgroundTint">#156CB1</item>
