<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="RoundedButton">
        <item name="android:backgroundTint">#FFCC00</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:stateListAnimator">@null</item> <!-- removes ripple if needed -->
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>


    <style name="RoundedButton2">
        <item name="android:backgroundTint">#156CB1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:stateListAnimator">@null</item> <!-- removes ripple if needed -->
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButtonStyle">
        <!-- Customize button background color -->
        <item name="android:backgroundTint">@color/white</item> <!-- Background color -->
        <!-- Customize button text color -->
        <item name="android:textColor">@color/black</item> <!-- Text color -->
        <!-- Customize button text size -->
        <item name="android:textSize">16sp</item> <!-- Text size -->
        <!-- Customize button corner radius -->
    </style>




    <style name="RoundedButtonGray" parent="RoundedButton">
        <item name="android:backgroundTint">#F1F1F1</item>
    </style>


    <style name="FooterTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FooterInfo">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="FooterCopyright">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="FooterSocialIcon">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>


    <style name="CustomWebViewStyle">
        <item name="android:background">#FFFFFF</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:clipToOutline" tools:targetApi="31">true</item>
    </style>


    <style name="CategoryTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/category_selector</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <!-- res/values/styles.xml -->
    <style name="AccountHeaderIcon" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="AccountIconButton" parent="Widget.Material3.Button.Icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="iconTint">@color/black</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>




    <color name="black">#000000</color>
</resources>